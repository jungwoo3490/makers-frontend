{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noEmitOnError": true,
    "target": "esnext"
  },
  "extends": "tsconfig/react-library.json",
  "include": ["**/*.ts", "**/*.tsx", "index.ts", "turbo/generators/config.ts", "tsup.config.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
